<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/detail_photo_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/darker_gray" />

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/generic_dimen"
            android:layout_marginEnd="@dimen/generic_dimen"
            android:layout_marginRight="@dimen/generic_dimen"
            android:layout_marginBottom="@dimen/generic_dimen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detail_star_b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_photo_iv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detail_category_tv"
                    style="@style/CategoryHeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/generic_dimen"
                    android:layout_marginStart="@dimen/generic_dimen"
                    android:layout_marginLeft="@dimen/generic_dimen"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detail_url_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/generic_dimen"
                    android:layout_marginRight="@dimen/generic_dimen" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/detail_error_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/generic_dimen"
            android:layout_marginLeft="@dimen/generic_dimen"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/generic_dimen"
            android:layout_marginRight="@dimen/generic_dimen"
            android:textColor="#F11313"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_photo_iv" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detail_star_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_dimen"
            app:layout_constraintEnd_toEndOf="@+id/detail_download_b"
            app:layout_constraintStart_toStartOf="@+id/detail_download_b"
            app:layout_constraintTop_toBottomOf="@+id/detail_photo_iv" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detail_download_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_dimen"
            android:layout_marginEnd="@dimen/generic_dimen"
            android:layout_marginRight="@dimen/generic_dimen"
            android:layout_marginBottom="@dimen/generic_dimen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_star_b" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/detail_download_error_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#F11313"
            app:layout_constraintEnd_toEndOf="@+id/detail_download_b"
            app:layout_constraintStart_toStartOf="@+id/detail_download_b"
            app:layout_constraintTop_toTopOf="@+id/detail_download_b"
            tools:visibility="invisible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
