<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/tiny_margin"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/item_favourite_picture_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_pic_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@android:color/darker_gray" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_favourite_remove_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_favourite_picture_iv"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/remove_button_text" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>